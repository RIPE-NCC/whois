            <id>junit</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>None</test.groups>
                <test.forkCount.integration>1</test.forkCount.integration>
                <test.files.unit>**/*Test.class</test.files.unit>
                <test.files.integration>None</test.files.integration>
            </properties>
        </profile>
        <profile>
            <id>integration</id>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>net.ripe.db.whois.common.IntegrationTest</test.groups>
                <test.files.unit>None</test.files.unit>
                <test.files.integration>**/*Test*.class,**/*Spec*.class</test.files.integration>
                <test.forkCount.integration>3</test.forkCount.integration>
            </properties>
        </profile>
        <profile>
            <id>comparison</id>
            <properties>
                <test.redirectOutput>false</test.redirectOutput>
                <test.ignoreFailure>false</test.ignoreFailure>
                <test.groups>net.ripe.db.whois.common.ManualTest</test.groups>
                <test.files.unit>None</test.files.unit>
                <test.files.integration>
                    **/CompareTwoQueryInstancesByFile.class,
                    **/CompareTwoRestInstancesByFile.class,
                    **/CompareTwoNrtmInstances.class
                </test.files.integration>
            </properties>
        </profile>
        <profile>
            <id>endtoend</id>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>net.ripe.db.whois.common.EndToEndTest</test.groups>
                <test.files.unit>None</test.files.unit>
                <test.files.integration>**/*Test*.class,**/*Spec*.class</test.files.integration>
                <test.forkCount.integration>3</test.forkCount.integration>
            </properties>
        </profile>
        <profile>
            <id>all</id>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>net.ripe.db.whois.common.EndToEndTest,net.ripe.db.whois.common.IntegrationTest
                </test.groups>
                <test.files.unit>**/*Test.class</test.files.unit>
                <test.files.integration>**/*Test*.class,**/*Spec*.class</test.files.integration>
                <test.forkCount.integration>3</test.forkCount.integration>
            </properties>
        </profile>
        <profile>
            <!-- travis can't run endtoend tests because of the dependency on ripe-internal servers like crowd -->
            <id>travis</id>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>net.ripe.db.whois.common.IntegrationTest</test.groups>
                <test.files.unit>**/*Test.class</test.files.unit>
                <test.files.integration>**/*Test*.class,**/*Spec*.class</test.files.integration>
                <test.forkCount.integration>3</test.forkCount.integration>
            </properties>
        </profile>
        <profile>
            <id>release</id>
            <properties>
                <test.redirectOutput>true</test.redirectOutput>
                <test.groups>None</test.groups>
                <test.files.unit>None</test.files.unit>
                <test.files.integration>None</test.files.integration>
            </properties>
        </profile>
        <profile>
            <id>jmeter</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.lazerycode.jmeter</groupId>
                        <artifactId>jmeter-maven-plugin</artifactId>
                        <version>1.10.0</version>
                        <configuration>
                            <reportDir>${project.build.directory}/jmeter-reports</reportDir>
                        </configuration>
                        <executions>
                            <execution>
                                <id>jmeter</id>
                                <phase>none</phase>
                                <goals>
                                    <goal>jmeter</goal>
                                </goals>
                           </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
