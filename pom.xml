                    <target>${java.version}</target>
                    <Xlint>warning</Xlint>
                    <complianceLevel>${java.version}</complianceLevel>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <verbose>false</verbose>
                    <warn>true</warn>
                    <aspectLibraries>
                        <aspectLibrary>
