        <!-- TODO: [ES] testcontainers dependency depends on JUnit 4 -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>elasticsearch</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.ripe.db</groupId>
